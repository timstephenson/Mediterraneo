<section id='title_image'>
  <%=raw @page[:title_image] %>
</section>
<section id='central_image'>
  <% unless @page.parent.blank? %>
    <% if @page.parent.title.downcase == "projects" %>
      
      <div id="left-arrow"><a href="/projects/jones"><%= image_tag "/images/left-arrow-nav.png" %></a></div>
      <div id="right-arrow"><a href="/projects/weiss"><%= image_tag "/images/right-arrow-nav.png" %></a></div>
      <div id="project">
        
        <div id="left"><%= image_tag "/images/casay-left.jpg" %></div>
        <div id="center"> </div>
        <div id="right"><%= image_tag "/images/casay-right.jpg" %></div>
        
        <div id="thumbnails-bkd">
          <div class="thumbnail"></div>
          <div class="thumbnail-bkd"></div>
          <div class="thumbnail-bkd"></div>
          <div class="thumbnail"></div>
          <div class="clear"></div>
          <div class="thumbnail-bkd"></div>
          <div class="thumbnail"></div>
          <div class="thumbnail-bkd"></div>
          <div class="thumbnail-bkd"></div>
        </div>
        
        <div id="thumbnails">
          <div class="thumbnail"></div>
          <div class="thumbnail"><%= image_tag "/images/casay-thumb_02.jpg" %></div>
          <div class="thumbnail"><%= image_tag "/images/casay-thumb_03.jpg" %></div>
          <div class="thumbnail"></div>
          <div class="clear"></div>
          <div class="thumbnail"><%= image_tag "/images/casay-thumb_05.jpg" %></div>
          <div class="thumbnail"></div>
          <div class="thumbnail"><%= image_tag "/images/casay-thumb_07.jpg" %></div>
          <div class="thumbnail"><%= image_tag "/images/casay-thumb_08.jpg" %></div>
        </div>
        
        <div class="image"><%= image_tag "/images/casay-image_02.jpg" %></div>
        
      </div>
      
    <% end %>
  <% end %>
  <%=raw @page[:central_image] %>
</section>
<section id='body_content'>
  <%=raw @page[:body] %>
</section>
<section id='side_body_content'>
  <%=raw @page[:contact_info] %>
</section>

<% content_for :head_libraries, jquery_include_tags(:jquery_ui => true) %>
<% content_for :head do %>
<script>
$(document).ready(function(){

  $("#body").fadeTo(0, 0.0);

  $("#project #right").fadeTo(0, 0.4);
  $("#project .thumbnail").fadeTo(0, 0.4);
  $("#project #thumbnails").hide();
  $("#project #thumbnails-bkd").hide();
  $("#project .image").hide();
  
  $("#project #right").mouseover(function(){
     $(this).fadeTo('slow', 1.0);
   }).mouseout(function(){
     $(this).fadeTo('slow', 0.4);
   });
   
   $("#project .thumbnail").mouseover(function(){
      $(this).fadeTo('slow', 1.0);
    }).mouseout(function(){
      $(this).fadeTo('slow', 0.4);
    });
   
   $('#project #right').click(function (){
     $("#project #thumbnails").slideToggle("slow");
     $("#project #thumbnails-bkd").slideToggle("slow");
   });
   
   $('#project .thumbnail').click(function (){
      $("#project .image").fadeTo("slow", 1.0);
    });
    
    $('#project .image').click(function (){
        $("#project .image").fadeTo("slow", 0.0);
        $("#project .image").hide("slow");
      });
      
    $("#body").fadeTo(1500, 1.0);
    
    $('#submenu a, #menu a, #left-arrow, #right-arrow').click(function (){
        $("#body").fadeTo(500, 0.0);
    });
    
 });
 
</script>
<% end %>
